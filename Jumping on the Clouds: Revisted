#include<iostream>
using namespace std;
int main()
    {
    int n,k,energy=100;
    cin>>n>>k;
    int c[n];
   int i=0;
    while(i<n)
        {
        cin>>c[i];
        i++;
    }  for(int i=0;i<n;i+=k)
        {
        if(c[i]==1)
            energy=energy-3;
        else if(c[i]==0)
            energy=energy-1;
    }
    cout<<energy;
}
